<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConferenceApp.Views.AddSpeakerPage">
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Author Name">
                    <EntryCell Placeholder="First Name"/>
                    <EntryCell Placeholder="Last Name"/>
                    <EntryCell Placeholder="Email" Keyboard="Email"/>
                    <ViewCell>
                        <Button Text="Add New Author"/>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>